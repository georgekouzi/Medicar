<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PillReminder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomNoActionBarTheme"
        parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="CustomToolBarStyle" >
        <item name="android:colorControlNormal">@color/white</item>

    </style>
    <style name="boxText"
        parent= "@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/BLUE_FOR_ITEM</item>
        <item name="android:windowBackground">@color/bc_white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/TimePickerTheme.ButtonBarTextColor</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/TimePickerTheme.ButtonBarTextColor</item>

    </style>

    <style name="TimePickerTheme.ButtonBarTextColor" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/BLUE_FOR_ITEM</item>

    </style>




</resources>
